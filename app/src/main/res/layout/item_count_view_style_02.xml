<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:focusable="true"
    android:background="@mipmap/ic_count_view_bg"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/countDown"
        android:background="@color/white"
        android:src="@mipmap/ic_count_view_down_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    <TextView
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_1"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/countSize"
        android:gravity="center"
        android:text="@string/one"
        android:background="@color/bgColor"
        android:minWidth="@dimen/dp_30"
        android:textColor="@color/tc1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        />
    <ImageView

        android:contentDescription="@string/app_name"
        android:id="@+id/countUp"
        android:background="@color/white"
        android:src="@mipmap/ic_count_view_up_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
