<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/_xpopup_round3_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/XPopupTitle"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="22dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_content"
        android:textColor="@color/_xpopup_content_color"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input"
        android:visibility="gone"
        android:textSize="16sp"
        android:singleLine="true"
        android:textColor="@color/_xpopup_content_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/layer_dp1_top_line_bg"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/layer_dp1_right_line"
            android:textColor="#BFC2CC"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/ok"/>
    </LinearLayout>
</LinearLayout>