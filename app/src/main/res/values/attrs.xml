<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--弧形的界面属性-->
    <declare-styleable name="ArcView">
        <attr name="arcHeight" format="dimension"/>
        <attr name="lgColor"   format="color"/>
        <attr name="bgColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="DropDownMenu">
        <attr name="ddDivider_width" format="float"/>
        <attr name="ddUnderlineColor" format="color"/>
        <attr name="ddDividerColor" format="color"/>
        <attr name="ddTextSelectedColor" format="color"/>
        <attr name="ddTextUnselectedColor" format="color"/>
        <attr name="ddMenuBackgroundColor" format="reference"/>
        <attr name="ddMaskColor" format="color"/>
        <attr name="ddMenuTextSize" format="dimension"/>
        <attr name="ddMenuSelectedIcon" format="reference"/>
        <attr name="ddMenuUnselectedIcon" format="reference"/>
        <attr name="ddMnuMenuHeightPercent" format="float"/>
        <attr name="ddTabEndDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color"/>
        <attr name="laser_color" format="color"/>
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color"/>
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="float"/>
    </declare-styleable>
    <declare-styleable name="CircleTopView">
        <attr name="circleMenu" format="string" />
        <attr name="circleTag" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="FlowLayout">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="reference"/>
        <attr name="backgroundRes" format="reference"/>
        <attr name="orientationSpace" format="dimension"/>
        <attr name="verticalSpace" format="dimension"/>
        <attr name="orientationPadding" format="dimension"/>
        <attr name="verticalPadding" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="CountView">
        <attr name="countStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="PwdInputView">
        <attr name="passView" format="reference"/>
        <attr name="inputMode">
            <enum name="password" value="0"/>
            <enum name="text" value="1"/>
        </attr>
    </declare-styleable>
</resources>